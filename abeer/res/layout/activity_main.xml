<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/k0"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/Screen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="45dp" />

<Button
    android:id="@+id/Bnum1"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/Screen"
    android:layout_below="@+id/Screen"
    android:gravity="center_horizontal"
    android:text="1"
    
    android:textSize="40dp" />

<Button
    android:id="@+id/Bnum2"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/Screen"
    android:layout_toRightOf="@+id/Bnum1"
    android:gravity="center_horizontal"
    android:text="2"
    android:textSize="40dp" />

<Button
    android:id="@+id/Bnum3"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/Screen"
    android:layout_toRightOf="@+id/Bnum2"
    android:gravity="center_horizontal"
    android:text="3"
    android:textColorLink="@android:color/holo_blue_bright"
    android:textSize="40dp" />

<Button
    android:id="@+id/Bmul"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/Screen"
    android:layout_toRightOf="@+id/Bnum3"
    android:gravity="center_horizontal"
    android:text="*"
    android:textSize="40dp" />

<Button
    android:id="@+id/Bdiv"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/Screen"
    android:layout_toRightOf="@+id/Bmul"
    android:gravity="center_horizontal"
    android:text="/"
    android:textSize="40dp" />

<Button
    android:id="@+id/Bnum4"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/Bnum1"
    android:layout_toLeftOf="@+id/Bnum2"
    android:gravity="center_horizontal"
    android:text="4"
    android:textSize="40dp" />

<Button
    android:id="@+id/Bnum5"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/Bnum4"
    android:layout_alignBottom="@+id/Bnum4"
    android:layout_toRightOf="@+id/Bnum4"
    android:gravity="center_horizontal"
    android:text="5"
    android:textSize="40dp" />

<Button
    android:id="@+id/Bnum6"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/Bnum5"
    android:layout_alignBottom="@+id/Bnum5"
    android:layout_toRightOf="@+id/Bnum5"
    android:gravity="center_horizontal"
    android:text="6"
    android:textSize="40dp" />

<Button
    android:id="@+id/Badd"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/Bnum6"
    android:layout_alignBottom="@+id/Bnum6"
    android:layout_toLeftOf="@+id/Bdiv"
    android:gravity="center_horizontal"
    android:text="+"
    android:textSize="40dp" />

<Button
    android:id="@+id/Bsub"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/Bdiv"
    android:layout_below="@+id/Bdiv"
    android:gravity="center_horizontal"
    android:text="-"
    android:textSize="40dp" />

<Button
    android:id="@+id/Bnum7"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/Bnum4"
    android:layout_toLeftOf="@+id/Bnum5"
    android:gravity="center_horizontal"
    android:text="7"
    android:textSize="40dp" />

<Button
    android:id="@+id/Bnum8"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/Bnum7"
    android:layout_alignBottom="@+id/Bnum7"
    android:layout_toLeftOf="@+id/Bnum6"
    android:gravity="center_horizontal"
    android:text="8"
   
    android:textSize="40dp" />

<Button
    android:id="@+id/Bnum9"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/Bnum5"
    android:layout_toRightOf="@+id/Bnum5"
    android:gravity="center_horizontal"
    android:text="9"
    android:textSize="40dp" />

<Button
    android:id="@+id/Bnum0"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/Bnum9"
    android:layout_alignBottom="@+id/Bnum9"
    android:layout_toLeftOf="@+id/Bsub"
    android:gravity="center_horizontal"
    android:text="0"
    android:textSize="40dp" />

<Button
    android:id="@+id/Bclr"
    android:layout_width="51dp"
    android:layout_height="wrap_content"
    android:layout_above="@+id/Beql"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/Screen"
    android:layout_toRightOf="@+id/Bdiv"
    android:gravity="center_horizontal"
    android:text="CLEAR"
    android:textSize="19dp" />

<Button
    android:id="@+id/Beql"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:layout_alignRight="@+id/Bclr"
    android:layout_below="@+id/Bsub"
    android:gravity="center_horizontal"
    android:text="="
    android:textSize="40dp" />

<Button
    android:id="@+id/Bdec"
    android:layout_width="40dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/Badd"
    android:layout_toRightOf="@+id/Badd"
    android:gravity="center_horizontal"
    android:text="."
    android:textSize="40dp" />

</RelativeLayout>